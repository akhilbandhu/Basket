<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/foodtogo_bg_smallpng"
>

    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/aboutus"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"

    <ImageView
        android:id="@+id/aboutUsLogo" android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp" android:layout_marginBottom="49dp"
        android:src="@drawable/ic_aboutus_people_black_24dp"
        android:tint="@color/white" app:layout_constraintBottom_toTopOf="@+id/aboutUsDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:id="@+id/aboutUsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsTitle"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
    />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="190dp"
        android:layout_height="165dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsDescription"
        app:srcCompat="@drawable/food2class_logo" />
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/aboutUsDescription"
        android:textSize="20sp" app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsLogo"
    />


    <TextView
        android:id="@+id/aboutUsTeamMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/teammembers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/aboutUsTeamNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsTeamMembers"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAlignment="center"
        />
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" app:layout_constraintBottom_toTopOf="@+id/team"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsDescription"
    />

    <TextView
        android:id="@+id/team"
        android:text="@string/teamNames"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="27dp"
        android:textAlignment="center" android:textColor="@color/white"
        android:textSize="20sp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>
</android.support.constraint.ConstraintLayout>