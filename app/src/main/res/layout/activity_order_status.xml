<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderStatus"
        android:background="@drawable/foodtogo_bg_smallpng"
>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerOrder"
            android:scrollbars="vertical"
            android:background="@android:color/transparent"
    >

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/noorderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/no_order_burger"
        android:text="You Have Not Placed Any Orders"
        android:textColor="#FFFFFF" />

</RelativeLayout>